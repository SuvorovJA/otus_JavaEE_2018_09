<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

    <!-- Servlets -->
    <servlet>
        <servlet-name>greetServlet</servlet-name>
        <servlet-class>ru.otus.sua.server.GreetingServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ru.otus.sua.L06 LoginService</servlet-name>
        <servlet-class>ru.otus.sua.server.LoginServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>greetServlet</servlet-name>
        <url-pattern>/l06/greet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ru.otus.sua.L06 LoginService</servlet-name>
        <url-pattern>/l06/login</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>L06.html</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <!--<description>DB Connection</description>-->
        <res-ref-name>jdbc/PostgresDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>
